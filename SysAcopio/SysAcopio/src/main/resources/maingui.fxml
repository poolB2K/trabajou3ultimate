<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainBorderPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pe.com.acopio.controller.MainGuiController">

    <!-- BARRA SUPERIOR -->
    <top>
        <VBox>
            <!-- Menu Bar -->
            <MenuBar>
                <Menu text="Archivo">
                    <MenuItem text="Nuevo Acopio" onAction="#handleNuevoAcopio"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Cerrar Sesión" onAction="#handleCerrarSesion"/>
                    <MenuItem text="Salir" onAction="#handleSalir"/>
                </Menu>

                <Menu text="Gestión">
                    <MenuItem text="Proveedores" onAction="#handleProveedores"/>
                    <MenuItem text="Historial" onAction="#handleHistorial"/>
                </Menu>

                <Menu text="Ayuda">
                    <MenuItem text="Acerca de"/>
                </Menu>
            </MenuBar>

            <!-- Barra de información -->
            <HBox spacing="20" style="-fx-background-color: #34495e; -fx-padding: 10;">
                <Label fx:id="lblUsuario" text="Usuario: ---" style="-fx-text-fill: white;">
                    <font>
                        <Font size="12" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblFechaHora" text="Fecha: ---" style="-fx-text-fill: white;">
                    <font>
                        <Font size="12" />
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>

    <!-- AREA CENTRAL - Aquí se cargarán las vistas -->
    <center>
        <!-- El contenido se carga dinámicamente -->
    </center>

    <!-- BARRA INFERIOR -->
    <bottom>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 5;">
            <Label text="SysAcopio v1.0 - Sistema de Acopio de Minerales"
                   style="-fx-text-fill: white;">
                <font>
                    <Font size="11" />
                </font>
            </Label>
        </HBox>
    </bottom>

</BorderPane>